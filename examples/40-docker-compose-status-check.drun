version: 2.0

project "docker-compose-status-demo" version "1.0":

task "check-compose-status" means "Demonstrate Docker Compose status checking":
	info "ğŸ³ Docker Compose Status Checker Demo"
	
	# Check status of compose project in current directory
	info "ğŸ“ Checking compose status in current directory..."
	set $status to "{docker compose status}"
	info "Status: {$status}"
	
	# Interpret the status
	if $status is "usable":
		success "âœ… Compose project is running and usable!"
	else if $status is "down":
		warn "â¬‡ï¸  Compose project is down"
	else if $status is "unusable":
		error "âŒ Compose project has issues (restarting/unhealthy containers)"
	else if $status is "partial":
		warn "âš ï¸  Compose project is partially running"
	else if $status is "unavailable":
		warn "ğŸš« Docker Compose is not available on this system"
	else if $status is "error":
		error "ğŸ’¥ Error checking compose status"
	else:
		info "â“ Unknown status: {$status}"

