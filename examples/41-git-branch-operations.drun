version: 2.0

task "test git branch" means "Test current git branch builtin and pipe operations":
	info "ðŸŒ¿ Testing git branch operations..."
	
	# Test basic git branch builtin
	set $branch to {current git branch}
	info "Current branch: {$branch}"
	
	# Test git branch with pipe operations
	set $safe_branch to {current git branch | replace "/" by "-"}
	info "Safe branch name: {$safe_branch}"
	
	# Test with parameter default using git branch
	given $deployment_branch defaults to "{current git branch | replace '/' by '-' | lowercase}"
	info "Deployment branch: {$deployment_branch}"
	
	success "âœ… Git branch operations completed!"

